<h1>All users</h1>

<%= render 'users/userlist', user: @user, book: @book %>

<table>
 <tr>
  <th>image</th>
  <th>name</th>
  <th>show</th>
 </tr>
<% @users.each do |user| %>
  <tr align="left">

   <td><%= attachment_image_tag user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %></td>
   <td><%= user.name %></td>
   <td><%= link_to "Show", user_path(user.id) %></td>

  </tr>
 <% end %>
</table>