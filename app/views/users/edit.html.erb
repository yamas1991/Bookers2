<h2>Userinfo(プロフィール編集)</h2>
<%= form_with model:@user, local:true do |f| %>

  <p label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>

  <label for="inputImage">Image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    <p><%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "no_image.jpg"%></p>

  <p label for="inputIntroduction">Introduction</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"説明"%></p>

  <%= f.submit "Update User" %>
<% end %>