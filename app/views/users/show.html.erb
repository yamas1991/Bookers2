<h1>Users#show</h1>

 <% if flash[:notice] %>
   <p id="notice">
     <%= flash[:notice] %>
   </p>
 <% end %>

<%= render 'users/userlist', user: @user, book: @book %>

<table>
 <tr>
  <th>usergazou</th>
  <th>name</th>
  <th>booktitle</th>
  <th>bookopinion</th>
 </tr>

 <% @books.each do |book| %>
  <tr align="left">
    <td><%= attachment_image_tag book.user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %></td>
    <td><%= link_to book.user.name, user_path(book.user.id) %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
 <% end %>
</table>

<%= paginate @books %>
