<h1>Books</h1>

<%= render 'books/booklist', user: @user, book: @book %>

<table>
 <tr>
  <th>image</th>
  <th>title</th>
  <th>opinion</th>
 </tr>
<% @books.each do |book| %>
  <tr align="left">

   <td><%= attachment_image_tag book.user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %></td>
   <td><%= link_to book.title, book %></td>
   <td><%= book.body %></td>

  </tr>
 <% end %>
</table>

<%= paginate @books %>